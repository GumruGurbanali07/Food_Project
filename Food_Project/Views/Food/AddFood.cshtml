@model Food_Project.Models.Food
@{
    ViewData["Title"] = "AddFood";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Add Food</h1>
<br />
@using (Html.BeginForm("AddFood","Food", FormMethod.Post))
{
    @Html.Label("Food Name")
    @Html.TextBoxFor(x=>x.Name, new {@class="form-control" })
    <br />
    @Html.Label("Food Long Description")
    @Html.TextAreaFor(x => x.LongDescription, new { @class = "form-control" })
    <br />
    @Html.Label("Food Short Description")
    @Html.TextAreaFor(x => x.ShortDescription, new { @class = "form-control" })
    <br />
    @Html.Label("Food Price")
    @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })
    <br />
    @Html.Label("Food Image")
    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
    <br />
    @Html.Label("Food Stock")
    @Html.TextBoxFor(x => x.Stock, new { @class = "form-control" })
    <br />
    @Html.Label("Category")
    @Html.TextBoxFor(x => x.Category, new { @class = "form-control" })
    <br />
    <button class="btn btn-primary">Save</button>

}
